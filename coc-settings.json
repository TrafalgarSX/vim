{
    "explorer.icon.enableNerdfont": true,

	"diagnostic.displayByAle": true,
    
    "pyright.inlayHints.variableTypes": false,
	"pyright.inlayHints.functionReturnTypes": false,
    "python.linting.enabled" : false,


    "snippets.trace": "verbose",
    "snippets.extends": {
        "cpp": ["c"],
        "javascriptreact": ["javascript"],
        "typescript": ["javascript"]
    },
	"snippets.ultisnips.directories": [
		"site/snippets/",
		"site/ultisnips/",
	],

	"coc.source.coc-snippets.enable": true,

	"suggest.autoTrigger": "always",
	"suggest.noselect": true,
	"suggest.enablePreview": true,
	"suggest.completionItemKindLabels": {
        "class": "\uf0e8",
        "color": "\ue22b",
        "constant": "\uf8ff",
        "default": "\uf29c",
        "event": "\ufacd",
        "enum": "\uf435",
        "enumMember": "\uf02b",
        "field": "\uf93d",
        "file": "\uf471",
        "folder": "\uf115",
        "function": "\uf794",
        "interface": "\ufa52",
        "keyword": "\uf893",
        "method": "\uf6a6",
        "module": "\uf668",
        "operator": "\uf915",
        "property": "\ufab6",
        "reference": "\uf87a",
        "snippet": "\uf64d",
        "struct": "\ufb44",
        "text": "\ue612",
        "typeParameter": "\uf278",
        "unit": "\uf475",
        "value": "\uf8a3",
        "variable": "\uf71b"
    },

    "list.autoResize": false,
    "list.maxHeight": 15,
    "list.source.grep.defaultArgs": ["-smartcase", "-regex"],
    "list.source.grep.defaultOptions": ["--interactive", "--no-sort", "--regex"]


}

